			<img class="gameOfT_poster" src="<%= @sherlock_series["Poster"] %>">
			</div>

			<div class="peaky_blinders_series">
			<p><%= @peaky_blinders_series["Title"] %></p>
			<a href="/movie?imdbID=<%= @peaky_blinders_series['imdbID'] %>"><%= @peaky_blinders_series['Title'] %></a>
			<img class="gameOfT_poster" src="<%= @peaky_blinders_series["Poster"] %>">
			</div>
		</div>
	
	</div>
</div>
</body>
</html>